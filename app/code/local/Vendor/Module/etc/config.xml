<?xml version="1.0"?>
<config>
    <modules>
        <Vendor_Module>
            <version>0.1.0</version>
        </Vendor_Module>
    </modules>
    <global>
        <helpers>
            <module>
                <class>Vendor_Module_Helper</class>
            </module>
        </helpers>
        <blocks>
            <module>
                <class>Vendor_Module_Block</class>
            </module>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Vendor_Module_Block_Rewrite_Adminhtml_Block_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <module>
                <class>Vendor_Module_Model</class>
            </module>
        </models>
    </global>
    <adminhtml>
        <events>
            <sales_order_grid_collection_load_before>
                <observers>
                    <extendedgrid>
                        <model>module/observer</model>
                        <method>salesOrderGridCollectionLoadBefore</method>
                    </extendedgrid>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
    </adminhtml>
</config>